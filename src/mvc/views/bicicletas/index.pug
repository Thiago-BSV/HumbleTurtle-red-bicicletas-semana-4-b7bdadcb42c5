extends ../layout

block content
    a(href='/') << Regresar
    |,  
    a(href='/bicicletas/create') Nueva bicicleta  
    br
    br
    table.table
        thead
            tr
                th(scope="col") #
                th(scope="col") Color
                th(scope="col") Modelo
                th(scope="col") Ubicacion
            tbody
                each bici in bicis
                    tr
                        th(scope="row")
                            = bici.code
                        td= bici.color
                        td= bici.modelo
                        td= bici.ubicacion
                        td
                            a(href='/bicicletas/'+ bici.code +'/update') Editar                        
                        td
                            form.inline(method='post' action='/bicicletas/'+bici.code+'/delete')
                                input(type='hidden' name='code' value=bici.code)
                                button.link-button(type='submit_param' value='submit_value') 
                                    ="Eliminar"
