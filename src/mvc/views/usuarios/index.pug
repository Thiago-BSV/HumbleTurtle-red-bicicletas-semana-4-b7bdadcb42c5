extends ../layout

block content
    a(href='/') << Regresar
    |,  
    a(href='/usuarios/create') Nuevo usuario  
    br
    br

    table.table
        thead
            tr
                th(scope="col") Email
                th(scope="col") Nombre
                th(scope="col") Verificado
            tbody
                each usuario in usuarios
                    tr
                        td(scope="row")
                            = usuario.email
                        td= usuario.nombre

                        td= usuario.verificado

                        td
                            a(href='/usuarios/'+ usuario._id +'/update') Editar                        
                        td
                            form.inline(method='post' action='/usuarios/' + usuario._id + '/delete')
                                input(type='hidden' name='id' value=usuario._id)
                                button.link-button(type='submit_param' value='submit_value') 
                                    ="Eliminar"
